<h1>List Articles </h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
    </tr>    
  <tbody>  
		<% @articles.each do |article| %>
		  <tr>
		    <td> <%= article.title %> </td>
		    <td> <%= article.description %> </td>
		    <td> <%= link_to "Show", article_path(article) %> </td>
		    <td> <%= link_to "Delete", article_path(article), method: :delete %> </td>
		  </tr>
		<% end %>
	</tbody>	
</table>	
